@model IEnumerable<UploadThings.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<h2>Products</h2>

<table class="table">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Type</th>
            <th>Image</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductName</td>
                <td>@product.TypeOfProduct</td>
                <td>
                    <img src="@product.ProductImagePath" alt="@product.ProductName" width="100" />
                </td>
                <td>@product.Price</td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Add New Product</a>
